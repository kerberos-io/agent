    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Golang",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/machinery/main.go",
            "args": [
                "-action",
                "run"
            ],
            "envFile": "${workspaceFolder}/machinery/.env",
            "buildFlags": "--tags dynamic",
        },
        {
            "name": "Launch React",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/ui",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "start"
            ],
        }
    ]
}